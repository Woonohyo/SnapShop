<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.l3cache.snapshop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--
     To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19"
        tools:ignore="OldTargetApi" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SnapActionBarTheme" >
        <service
            android:name=".service.SyncDataService"
            android:exported="false" >
            <intent-filter>
                <action android:name=".service.SyncDataService" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name=".login.LoginView"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustResize|stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".newsfeed.NewsfeedView"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".search.SearchResultsView"
            android:label="@string/title_activity_search_results" >
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".MainTabHostView"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name="com.l3cache.snapshop.mysnap.MySnapsView"
            android:label="@string/title_activity_favorite_view" >
        </activity>
        <activity
            android:name=".myposts.MyPostsView"
            android:label="@string/title_activity_my_posts_view" >
        </activity>
        <activity
            android:name=".info.InfoView"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name=".upload.UploadSnapView"
            android:label="@string/title_activity_upload_snap_view" >
        </activity>
        <activity
            android:name=".postViewer.PostViewer"
            android:label="@string/title_activity_post_viewer" >
        </activity>
        <activity 
            android:name=".photocrop.CropImageActivity" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>