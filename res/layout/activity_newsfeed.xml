<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/newsfeed_sort_button1"
            android:textColor="#000000"
            android:background="@drawable/buttonshape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_recommended"
             />

        <Button
            android:id="@+id/newsfeed_sort_button2"
            android:textColor="#000000"
            android:background="@drawable/buttonshape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_recent" />

        <Button
            android:id="@+id/newsfeed_sort_button3"
            android:textColor="#000000"
            android:background="@drawable/buttonshape"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_hot" />
    </LinearLayout>

    <ListView
        android:id="@+id/newsfeed_main_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>